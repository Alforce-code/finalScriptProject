<%- include('../partials/header', {title: 'Login'}) %>

<!-- Load Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: url('/images/download (1).jpeg') center/cover fixed;
        flex-direction: column;
        text-align: center;
        color: white;
    }

    /* Animated Text Container */
    .animated-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
        margin-bottom: 2rem;
    }

    /* Logo beside animated text */
    .animated-container img {
        width: 80px;
        height: 80px;
    }

    /* Animated Text */
    .animated-text {
        font-size: 2rem;
        font-weight: bold;
        letter-spacing: 2px;
        animation: fadeText 6s ease-in-out infinite;
        background: linear-gradient(90deg, #f0f, #0ff, #ff0);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    @keyframes fadeText {
        0%, 20% { opacity: 0; transform: translateY(-15px); }
        25%, 75% { opacity: 1; transform: translateY(0); }
        80%, 100% { opacity: 0; transform: translateY(15px); }
    }

    /* Login card */
    .auth-card {
        background: rgba(255, 255, 255, 0.95);
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
        width: 300px; /* smaller size */
        z-index: 1;
        color: black;
    }

    .btn {
        background-color: rgb(22, 58, 121);
        color: white;
        border: none;
        padding: 0.6rem;
        border-radius: 6px;
        font-size: 16px;
        cursor: pointer;
        transition: 0.3s;
    }

    .btn:hover {
        background-color: rgb(40, 90, 170);
    }

    /* Icon colors */
    .icon-primary { color: rgb(22, 58, 121); }
    .icon-accent { color: #d4af37; }
    .icon-error { color: #d9534f; }

    /* Password field eye icon */
    .password-container {
        position: relative;
    }

    .password-container i {
        position: absolute;
        right: 10px;
        top: 38px;
        cursor: pointer;
        color: #333;
    }

    .auth-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

</style>

<!-- Animated Text + Logo horizontally -->
<div class="animated-container">
    <img src="/images/mubas_logo.png" alt="MUBAS Logo">
    <div class="animated-text">INNOVATE. CREATE. GENERATE.</div>
</div>

<div class="auth-container">
    <div class="auth-card">
        <img src="/images/mubas_logo.png" alt="MUBAS Logo" style="width: 80px; display: block; margin: 0 auto 1rem auto;">

        <h2>
            <i class="fa-solid fa-graduation-cap icon-accent"></i>
            MUBAS Grading System
        </h2>
        <p style="font-size: 15px; display: flex; align-items: center; justify-content: center;">
            <i class="fa-solid fa-right-to-bracket icon-primary" style="margin-right:5px;"></i>
            Sign in to get started
        </p>

        <% if (error) { %>
            <div class="alert alert-error">
                <i class="fa-solid fa-circle-exclamation icon-error"></i> <%= error %>
            </div>
        <% } %>

        <form action="/auth/login" method="POST">
            <div class="form-group">
                <label for="email">
                    <i class="fa-solid fa-envelope icon-primary"></i> Email
                </label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required>
            </div>

            <div class="form-group password-container">
                <label for="password">
                    <i class="fa-solid fa-lock icon-primary"></i> Password
                </label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required>
                <i class="fa-solid fa-eye" id="togglePassword"></i>
            </div>

            <button type="submit" class="btn" style="width: 100%;">
                <i class="fa-solid fa-right-to-bracket icon-primary"></i> Login
            </button>

            <div style="margin-top: 0.5rem; display:flex; justify-content:space-between;">
                <a href="/auth/change-password" style="color: rgb(49, 47, 38); text-decoration:none;">
                    <i class="fa-solid fa-key icon-accent"></i> Change Password
                </a>
                <a href="/auth/forgot-password" style="text-decoration: none; color: rgb(49, 47, 38);">
                    <i class="fa-solid fa-question-circle icon-primary"></i> Forgot Password?
                </a>
            </div>
        </form>
    </div>
</div>

<script>
    // Eye toggle password visibility
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#password');

    togglePassword.addEventListener('click', function () {
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        this.classList.toggle('fa-eye-slash');
    });
</script>

<%- include('../partials/footer') %>
