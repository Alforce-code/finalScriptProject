<!-- Load Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
    body {
        margin: 0;
        font-family: "Segoe UI", Arial, sans-serif;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: url('/images/download (1).jpeg') center/cover fixed;
        position: relative;
    }

    /* Dark overlay for readability */
    body::before {
        content: "";
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%;
        background: rgba(0, 0, 0, 0.55);
        z-index: 0;
    }

    .auth-container {
        z-index: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    /* Glassmorphic login card */
    .auth-card {
        background: #fff;
        backdrop-filter: blur(12px);
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
        width: 340px;
        color: #000;
        text-align: center;
        animation: fadeIn 1s ease;
    }

    /* Logo */
    .auth-card img {
        width: 80px;
        margin-bottom: 1rem;
    }

    h2 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    p {
        margin-bottom: 1.5rem;
        font-size: 0.95rem;
        opacity: 0.9;
    }

    /* Alerts */
    .alert {
        padding: 0.6rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        font-size: 0.9rem;
        text-align: left;
    }
    .alert-error {
        background: rgba(217, 83, 79, 0.9);
        color: white;
    }

    /* Form controls */
    .form-group {
        text-align: left;
        margin-bottom: 1rem;
    }

    .form-group label {
        font-size: 0.9rem;
        font-weight: bold;
        display: block;
        margin-bottom: 0.3rem;
        color: #2b2929;
    }

    .form-control {
        width: 100%;
        padding: 0.6rem;
        border-radius: 8px;
        border: none;
        outline: none;
        font-size: 0.95rem;
        background: rgba(128, 128, 128, 0.2);
        color: #000;
        transition: all 0.3s ease;
    }

    /* Password eye icon */
    .password-container {
        position: relative;
    }
    .password-container i {
        position: absolute;
        right: 12px;
        top: 38px;
        cursor: pointer;
        color: #555;
        transition: 0.3s;
    }
    .password-container i:hover {
        color: #000;
    }

    /* Buttons */
    .btn {
        background-color: rgb(3, 168, 52);
        color: white;
        border: none;
        padding: 0.7rem;
        border-radius: 10px;
        font-size: 16px;
        cursor: pointer;
        transition: transform 0.2s, background 0.3s;
        margin-top: 0.5rem;
    }

    .btn:hover {
        transform: translateY(-2px);
        background-color: rgb(0, 128, 40);
    }

    /* Links */
    .auth-links {
        margin-top: 1rem;
        display: flex;
        justify-content: space-between;
        font-size: 0.9rem;
    }
    .auth-links a {
        text-decoration: none;
        color: #333;
        display: flex;
        align-items: center;
        gap: 5px;
        transition: 0.3s;
    }
    .auth-links a:hover {
        color: rgb(3, 168, 52);
    }

    /* Icon colors */
    .icon-primary { color: rgb(22, 58, 121); }
    .icon-accent { color: #d4af37; }
    .icon-error { color: #d9534f; }

    /* Keyframes */
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(15px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<div class="auth-container">
    <div class="auth-card">
        <img src="/images/mubas_logo.png" alt="MUBAS Logo">

        <h2><i class="fa-solid fa-graduation-cap icon-accent"></i> MUBAS Grading System</h2>
        <p><i class="fa-solid fa-right-to-bracket icon-primary"></i> Sign in to continue</p>

        <% if (error) { %>
            <div class="alert alert-error">
                <i class="fa-solid fa-circle-exclamation icon-error"></i> <%= error %>
            </div>
        <% } %>

