<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Programs - MUBAS Grading System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .card {
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            border: 1px solid #e3e6f0;
            margin-bottom: 1.5rem;
        }
        .table-responsive {
            max-height: 500px;
        }
        .btn-action {
            margin: 2px;
        }
        .alert {
            border-radius: 0.5rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid py-4">
        <!-- Flash Messages -->
        <% if (typeof message !== 'undefined' && message) { %>
            <div class="alert alert-<%= (typeof messageType !== 'undefined') ? messageType : 'info' %> alert-dismissible fade show" role="alert">
                <i class="fas <%= (typeof messageType !== 'undefined' && messageType === 'success') ? 'fa-check-circle' : 'fa-exclamation-triangle' %> me-2"></i>
                <%= message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 text-gray-800"><i class="fas fa-book me-2"></i>Manage Programs & Classes</h1>
            <a href="/admin/dashboard" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
            </a>
        </div>

        <div class="row">
            <!-- Add Program Form -->
            <div class="col-lg-4 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-plus-circle me-2"></i>Add New Program
                        </h5>
                    </div>
                    <div class="card-body">
                        <form action="/admin/add-program" method="POST">
                            <div class="mb-3">
                                <label for="program_id" class="form-label">Program ID *</label>
                                <input type="text" class="form-control" id="program_id" name="program_id" 
                                       placeholder="e.g., PBIT, PBIS" required maxlength="10">
                            </div>
                            <div class="mb-3">
                                <label for="name" class="form-label">Program Name *</label>
                                <input type="text" class="form-control" id="name" name="name" 
                                       placeholder="e.g., Bachelor of Information Technology" required maxlength="100">
                            </div>
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fas fa-save me-2"></i>Add Program
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Add Class Form -->
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-plus-circle me-2"></i>Add New Class
                        </h5>
                    </div>
                    <div class="card-body">
                        <form action="/admin/add-class" method="POST">
                            <div class="mb-3">
                                <label for="class_id" class="form-label">Class ID *</label>
                                <input type="text" class="form-control" id="class_id" name="class_id" 
                                       placeholder="e.g., PBIT1, PBIS2" required maxlength="10">
                            </div>
                            <div class="mb-3">
                                <label for="program_id_select" class="form-label">Program *</label>
                                <select class="form-select" id="program_id_select" name="program_id" required>
                                    <option value="">Select Program</option>
                                    <% if (typeof programs !== 'undefined') { %>
                                        <% programs.forEach(function(program) { %>
                                            <option value="<%= program.program_id %>">
                                                <%= program.program_id %> - <%= program.name %>
                                            </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="year" class="form-label">Year *</label>
                                <select class="form-select" id="year" name="year" required>
                                    <option value="">Select Year</option>
                                    <option value="1">Year 1</option>
                                    <option value="2">Year 2</option>
                                    <option value="3">Year 3</option>
                                    <option value="4">Year 4</option>
                                    <option value="5">Year 5</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-info w-100">
                                <i class="fas fa-save me-2"></i>Add Class
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Programs List -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-list me-2"></i>Programs List
                            <span class="badge bg-light text-dark ms-2">
                                <% if (typeof programs !== 'undefined') { %>
                                    <%= programs.length %>
                                <% } else { %>
                                    0
                                <% } %> programs
                            </span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (typeof programs === 'undefined' || programs.length === 0) { %>
                            <div class="text-center py-4">
                                <i class="fas fa-book fa-3x text-muted mb-3"></i>
                                <p class="text-muted">No programs found. Add your first program using the form.</p>
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover table-striped">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Program ID</th>
                                            <th>Name</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% programs.forEach(function(program) { %>
                                            <tr>
                                                <td><strong><%= program.program_id %></strong></td>
                                                <td><%= program.name %></td>
                                                <td>
                                                    <div class="btn-group">
                                                        <!-- Edit Button -->
                                                        <button type="button" class="btn btn-warning btn-sm btn-action" 
                                                                data-bs-toggle="modal" data-bs-target="#editProgramModal"
                                                                data-id="<%= program.program_id %>"
                                                                data-name="<%= program.name %>">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                        <!-- Delete Button -->
                                                        <form action="/admin/delete-program" method="POST" class="d-inline">
                                                            <input type="hidden" name="program_id" value="<%= program.program_id %>">
                                                            <button type="submit" class="btn btn-danger btn-sm btn-action" 
                                                                    onclick="return confirm('Are you sure you want to delete program <%= program.program_id %> - <%= program.name %>? This will also delete all associated classes.')">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Classes List -->
                <div class="card mt-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-list me-2"></i>Classes List
                            <span class="badge bg-light text-dark ms-2">
                                <% if (typeof classes !== 'undefined') { %>
                                    <%= classes.length %>
                                <% } else { %>
                                    0
                                <% } %> classes
                            </span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (typeof classes === 'undefined' || classes.length === 0) { %>
                            <div class="text-center py-4">
                                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                <p class="text-muted">No classes found. Add your first class using the form.</p>
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover table-striped">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Class ID</th>
                                            <th>Program</th>
                                            <th>Year</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% classes.forEach(function(classItem) { %>
                                            <tr>
                                                <td><strong><%= classItem.class_id %></strong></td>
                                                <td><%= classItem.program_id %></td>
                                                <td>Year <%= classItem.year %></td>
                                                <td>
                                                    <div class="btn-group">
                                                        <!-- Delete Button -->
                                                        <form action="/admin/delete-class" method="POST" class="d-inline">
                                                            <input type="hidden" name="class_id" value="<%= classItem.class_id %>">
                                                            <button type="submit" class="btn btn-danger btn-sm btn-action" 
                                                                    onclick="return confirm('Are you sure you want to delete class <%= classItem.class_id %>? This will remove all student enrollments in this class.')">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Program Modal -->
    <div class="modal fade" id="editProgramModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title"><i class="fas fa-edit me-2"></i>Edit Program</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/admin/update-program" method="POST">
                    <div class="modal-body">
                        <input type="hidden" id="edit_program_id" name="program_id">
                        <div class="mb-3">
                            <label for="edit_name" class="form-label">Program Name *</label>
                            <input type="text" class="form-control" id="edit_name" name="name" required maxlength="100">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-warning">Update Program</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Edit Program Modal Handler
        document.addEventListener('DOMContentLoaded', function() {
            const editModal = document.getElementById('editProgramModal');
            if (editModal) {
                editModal.addEventListener('show.bs.modal', function(event) {
                    const button = event.relatedTarget;
                    const programId = button.getAttribute('data-id');
                    const programName = button.getAttribute('data-name');

                    document.getElementById('edit_program_id').value = programId;
                    document.getElementById('edit_name').value = programName;
                });
            }

            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(function(alert) {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        });
    </script>
</body>
</html>